<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.niu.cs.z1764108.hawaiisounds.MainActivity">

    <ImageView
        android:layout_width="320dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/ukulele"
        android:layout_marginTop="12dp"
        android:id="@+id/imageView4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="320dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/drums"
        android:layout_marginTop="28dp"
        android:id="@+id/imageView5"
        android:layout_below="@+id/ukuleleButton"
        android:layout_alignLeft="@+id/imageView4"
        android:layout_alignStart="@+id/imageView4" />

    <Button
        android:text="@string/playDrumsString"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/drumsButton"
        android:onClick="playDrums"
        android:layout_below="@+id/imageView5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp" />

    <Button
        android:text="@string/playUkuleleString"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ukuleleButton"
        android:onClick="playUkulele"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/imageView4"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
